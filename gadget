## {GADGET}/idVendor
##   Type:   number
##   Format: 0x05F9
ID_VENDOR=0x28DE

## {GADGET}/idProduct
##   Type:   number
##   Format: 0x1234
ID_PRODUCT=0x3000

## {GADGET}/strings/*/serialnumber
##   Type:   serial string / mode
##   Format: 0123456789abcdef
##     machine:  /etc/machine-id
##     serialno: /proc/cmdline(androidboot.serialno)
SERIAL=serialno

## {GADGET}/strings/*/manufacturer
##   Type:   string
MANFACTURER=Valve

## {GADGET}/strings/*/product
##   Type:   string
PRODUCT=Steam Deck

## {GADGET}/configs/*/strings/*/configuration
##   Type:   string
CONFIGURATION=gadget

## Gadget device name
##   Type:   string
GADGET=Steam Deck

## USB device controller name (/sys/class/udc)
##   Type:   string / mode
##     auto: /proc/cmdline(androidboot.usbcontroller) or scan /sys/class/udc
UDC=auto
